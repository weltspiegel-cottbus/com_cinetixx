<?xml version="1.0" encoding="UTF-8"?>
<extension type="component" method="upgrade">

    <name>Cinetixx</name>
    <version>0.6.0</version>
    <creationDate>November 2025</creationDate>
    <author>Michael Buchholz</author>
    <authorEmail>mail@lean-stack.rocks</authorEmail>
    <copyright>Weltspiegel Cottbus</copyright>
    <license>MIT; see LICENSE</license>
    <description>Joomla-Komponente zur Cinetixx Einbindung</description>

    <namespace path="src">Weltspiegel\Component\Cinetixx</namespace>

    <install>
        <sql>
            <file driver="mysql" charset="utf8">sql/cinetixx.install.sql</file>
        </sql>
    </install>
    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">sql/cinetixx.uninstall.sql</file>
        </sql>
    </uninstall>

    <administration>
        <menu link="option=com_cinetixx">COM_CINETIXX</menu>
        <files folder="administrator/components/com_cinetixx">
            <folder>forms</folder>
            <folder>language</folder>
            <folder>services</folder>
            <folder>sql</folder>
            <folder>src</folder>
            <folder>tmpl</folder>
            <filename>config.xml</filename>
        </files>
    </administration>

    <files folder="components/com_cinetixx">
        <folder>src</folder>
        <folder>tmpl</folder>
        <folder>layouts</folder>
    </files>

    <media folder="media/com_cinetixx" destination="com_cinetixx">
        <filename>joomla.asset.json</filename>
    </media>

    <updateservers>
        <server type="extension" priority="1" name="Cinetixx Component Updates">https://raw.githubusercontent.com/weltspiegel-cottbus/com_cinetixx/main/update-manifest.xml</server>
    </updateservers>
</extension>
